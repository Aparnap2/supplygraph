# SupplyGraph MVP - Core Environment Variables
# Copy this to .env and fill in your actual API keys

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://supplygraph:supplygraph123@localhost:5432/supplygraph

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OPENAI (for LLM features)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# STRIPE (for payments - use test keys)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters

# =============================================================================
# GMAIL API (for RFQ emails)
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=true