{
  "name": "supplygraph",
  "private": true,
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:ai\"",
    "dev:web": "pnpm --filter web dev",
    "dev:ai": "cd apps/ai-engine && NODE_ENV=production PYTHONPATH=. uv run uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:web-only": "pnpm --filter web dev",
    "dev:ai-only": "cd apps/ai-engine && NODE_ENV=production PYTHONPATH=. uv run uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "pnpm --filter web build",
    "build:ai": "cd apps/ai-engine && uv build",
    "test": "pnpm test:web && pnpm test:ai",
    "test:web": "pnpm --filter web test",
    "test:ai": "cd apps/ai-engine && uv run pytest",
    "test:watch": "concurrently \"pnpm test:web --watch\" \"pnpm test:ai --watch\"",
    "lint": "pnpm lint:web && pnpm lint:ai",
    "lint:web": "pnpm --filter web lint",
    "lint:ai": "cd apps/ai-engine && uv run ruff check",
    "lint:fix": "pnpm lint:web --fix && pnpm lint:ai --fix",
    "format": "pnpm format:web && pnpm format:ai",
    "format:web": "pnpm --filter web format",
    "format:ai": "cd apps/ai-engine && uv run black .",
    "db:migrate": "pnpm --filter database migrate",
    "db:generate": "pnpm --filter database generate",
    "db:studio": "pnpm --filter database studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "pnpm docker:up && sleep 10 && pnpm dev",
    "setup": "pnpm install && cd apps/ai-engine && uv sync && cd ../web && pnpm install && cd ../../ && pnpm db:generate"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "jest-axe": "^10.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0",
  "dependencies": {
    "@tanstack/react-start": "^1.132.0"
  }
}